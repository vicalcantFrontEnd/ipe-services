# ============================================================
# APP
# ============================================================
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_PREFIX=api
API_VERSION=1

# ============================================================
# DATABASE (PostgreSQL)
# ============================================================
# Connection string for app (use pooler if available)
DATABASE_URL=postgresql://ipe_user:your-password@localhost:5432/ipe_services
# Direct connection for migrations (same as DATABASE_URL if no pooler)
DIRECT_URL=postgresql://ipe_user:your-password@localhost:5432/ipe_services

# ============================================================
# AUTH (JWT)
# ============================================================
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-chars
JWT_REFRESH_EXPIRATION=7d

# ============================================================
# REDIS
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
